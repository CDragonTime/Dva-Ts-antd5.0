{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "compiler-client",
    "sourceMap": true,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "target": "esnext",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "noImplicitAny": false,
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "skipLibCheck": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "@src/*": [
        "./src/*"
      ],
      "@pages/*": [
        "./src/routes/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "lib",
    "es"
  ]
}
